{
  "version": 6,
  "configurePresets": [
    {
      "name": "default",
      "binaryDir": "${sourceDir}/out/",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "generator": "Ninja Multi-Config"
    },
    {
      "name": "local",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_EXPORT_PACKAGE_REGISTRY": {
          "type": "BOOL",
          "value": "ON"
        },
        "VCPKG_MANIFEST_MODE": {
          "type": "BOOL",
          "value": "OFF"
        }
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default",
      "configuration": "Debug"
    },
    {
      "name": "local",
      "configurePreset": "local",
      "configuration": "Debug"
    }
  ],
  "testPresets": [
    {
      "name": "default",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "timeout": 10
      },
      "configurePreset": "default",
      "configuration": "Debug"
    },
    {
      "name": "local",
      "inherits": "default",
      "configurePreset": "local",
      "configuration": "Debug"
    }
  ],
  "workflowPresets": [
    {
      "name": "default",
      "steps": [
        {
          "type": "configure",
          "name": "default"
        },
        {
          "type": "build",
          "name": "default"
        },
        {
          "type": "test",
          "name": "default"
        }
      ]
    },
    {
      "name": "local",
      "steps": [
        {
          "type": "configure",
          "name": "local"
        },
        {
          "type": "build",
          "name": "local"
        },
        {
          "type": "test",
          "name": "local"
        }
      ]
    }
  ]
}
